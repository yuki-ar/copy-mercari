= render 'users/logo'
.devise-content
  %h2 会員情報登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :ニックネーム
      %br/
      = f.text_field :nickname, autofocus: true, placeholder: "例）メルカリ太郎"
    .field
      = f.label :メールアドレス
      %br/
      = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
    .field
      = f.label :パスワード
      %br/
      = f.password_field :password, autocomplete: "new-password", placeholder: "６文字以上"
    .field
      = f.label :パスワード（確認）
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "６文字以上"
    .actions
      = f.submit "次へ進む"
  .devise-content__sns
    = link_to user_facebook_omniauth_authorize_path, class: "devise-content__sns__facebook" do
      = fa_icon "facebook-official", class: "fa-2x devise-content__sns__facebook__icon"
      %p Facebookで登録
    = link_to user_google_oauth2_omniauth_authorize_path, class: "devise-content__sns__google" do
      = image_tag "google.svg", class: "fa-2x devise-content__sns__google__icon" 
      %p Googleで登録

