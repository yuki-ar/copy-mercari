!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %title CopyMercari
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
  - if controller.controller_name != "sessions" && controller.controller_name != "registrations"
    .header
      .header__inner
        .clearfix
          = image_tag("logo.svg")
          = form_tag  "#" do
            = text_field :item, :name
        .header__inner__nav
          %p カテゴリーから探す
          %p ブランドから探す
          .header__inner__nav__session
            -if user_signed_in?
              %p #{current_user.nickname}がログイン中
              =link_to "ログアウト", destroy_user_session_path, method: "delete"
            - else
              =link_to "新規会員登録", new_user_registration_path, class: "header__inner__nav__session__regist"
              =link_to "ログイン", new_user_session_path
  = yield
